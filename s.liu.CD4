     ]
    }
   ],
   "source": [
    "# get the artist name\n",
    "artist = soup.find('h1').text\n",
    "print(artist)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 5,
   "id": "79318b4b",
   "metadata": {},
   "outputs": [],
   "source": [
    "# get the song titles and lyrics\n",
    "lyrics = []\n",
    "titles = []\n",
    "lyric_url = 'https://www.azlyrics.com'\n",
    "for song in soup.find_all('div', class_='listalbum-item'):\n",
    "    content = song.find('a')\n",
    "    if content:\n",
    "        title = content.text\n",
    "        titles.append(title)\n",
    "        lyrics.append(lyric_url + content['href'])\n",
    "        # lyric_response = requests.get(lyric_url + content['href'])\n",
    "        # lyric_html = lyric_response.text\n",
    "        # lyric_soup = BeautifulSoup(lyric_html, 'html.parser')\n",
    "        # lyric = lyric_soup.find('div', class_='col-xs-12 col-lg-8 text-center').find_all('div')[4].text\n",
    "        # lyrics.append(lyric)\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 6,
   "id": "c40b1a2e",
   "metadata": {},
   "outputs": [],
   "source": [
    "# put the data into a dataframe\n",
    "artists = [artist] * len(titles)\n",
    "df = pd.DataFrame({'artist': artist, 'title': titles, 'lyrics': lyrics})\n",
    "# Please note that the lyrics are not scraped yet, but the url to the lyrics is stored in the dataframe, so that the lyrics can be scraped later."
   ]
