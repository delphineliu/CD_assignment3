   "source": [
    "from bs4 import BeautifulSoup\n",
    "import requests\n",
    "import re\n",
    "import pandas as pd"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "id": "eaea770a",
   "metadata": {},
   "outputs": [],
   "source": [
    "# get the html from the website\n",
    "url = 'https://www.azlyrics.com/d/daftpunk.html'\n",
    "response = requests.get(url, headers={'User-Agent': 'Mozilla/5.0'})\n",
    "html = response.text"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "id": "afd919be",
   "metadata": {},
   "outputs": [],
   "source": [
    "# parse the html\n",
    "soup = BeautifulSoup(html, 'html.parser')"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 4,
   "id": "9c5fb573",
   "metadata": {},
